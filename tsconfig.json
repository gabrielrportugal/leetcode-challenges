{
  "compilerOptions": {
    "incremental": true,
    "experimentalDecorators": true,
    "composite": true,
    "useDefineForClassFields": true,
    "target": "ESNext",
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "rootDir": "./",
    "baseUrl": "./",
    "paths": {
      "@/*": ["./src/*"]
    },
    "resolveJsonModule": true,
    "declaration": true,
    "declarationMap": true,

    "outDir": "build",
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", "src/**/*.spec.ts"],
}
